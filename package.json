{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --parallel precommit"
    }
  },
  "scripts": {
    "start": "lerna run build --scope @opencrvs/components && lerna run --parallel --ignore e2e start",
    "start:prod": "lerna run build --scope @opencrvs/components && lerna run --parallel --ignore e2e start:prod",
    "dev": "yarn dev:secrets:gen && concurrently \"yarn run start\" \"yarn run compose\"",
    "dev:secrets:gen": "openssl genrsa -out .secrets/private-key.pem 2048 && openssl rsa -pubout -in .secrets/private-key.pem -out .secrets/public-key.pem",
    "dev:tmux": "tmuxinator start",
    "dev:tmux:kill": "tmux kill-session -t opencrvs",
    "open": "opener 'http://localhost:6060/' && opener 'http://localhost:3020/'",
    "test": "lerna run test --stream --watchAll=false",
    "compose": "yarn run compose:build && yarn run compose:up",
    "compose:up": "docker-compose -p opencrvs -f docker-compose.deps.yml -f docker-compose.dev.yml up",
    "compose:down": "docker-compose -p opencrvs -f docker-compose.deps.yml -f docker-compose.dev.yml down",
    "compose:build": "docker-compose -f docker-compose.deps.yml -f docker-compose.dev.yml build",
    "compose:push": "docker-compose build && docker-compose push && yarn compose:push:version",
    "compose:push:version": "export VERSION=`git log -1 --pretty=format:%h` && docker-compose build && docker-compose push && unset VERSION",
    "deploy": "bash deploy.sh",
    "deploy:staging": "bash deploy.sh --clear-data=no --restore-metadata=yes opencrvs-staging.jembi.org latest",
    "deploy:qa": "bash deploy.sh --clear-data=yes --restore-metadata=yes opencrvs.qa1.jembi.org",
    "db:backup:create": "./infrastructure/backup-metadata.sh",
    "db:backup:restore": "./infrastructure/restore-metadata.sh",
    "db:clear:all": "./infrastructure/clear-all-data.sh"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "concurrently": "^3.5.1",
    "husky": "1.0.0-rc.13",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.15.2"
  },
  "dependencies": {
    "opener": "^1.5.1"
  }
}
