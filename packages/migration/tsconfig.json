{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@migration/*": ["./*"]
    },
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build/dist",
    "lib": ["esnext.asynciterable", "es6", "es2017", "dom"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": ["fhir", "jest"]
  },
  "include": ["migrations/**/*.ts"],
  "exclude": ["node_modules", "build", "scripts"]
}
