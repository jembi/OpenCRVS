{
  "name": "@opencrvs/auth",
  "version": "1.0.0",
  "description": "OpenCRVS authentication service",
  "main": "src/index.js",
  "license": "NONE",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec ts-node -- src/index.ts",
    "start:prod": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/hapi": "^17.0.12",
    "@types/inert": "^5.1.1",
    "@types/joi": "^13.3.0",
    "@types/vision": "^5.3.4",
    "app-module-path": "^2.2.0",
    "boom": "^7.2.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.5.1",
    "joi": "^13.4.0",
    "node-fetch": "^2.1.2",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "hapi-swagger": "^9.1.1",
    "inert": "^5.1.0",
    "jest": "^23.1.0",
    "jest-fetch-mock": "^1.6.5",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "vision": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./setupJest.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
