{
  "name": "@opencrvs/components",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/react-select": "^2.0.2",
    "react": "^16.3.2",
    "react-docgen-typescript": "^1.7.0",
    "react-dom": "^16.3.2",
    "react-select": "^2.0.0",
    "react-styleguidist": "^7.0.13",
    "styled-components": "^3.3.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf lib",
    "start": "concurrently 'styleguidist server' 'tsc -w'",
    "postinstall": "yarn build",
    "build": "yarn clean && tsc",
    "docker-build": "docker build -t components .",
    "docker-run": "docker run -it --rm -p 5000:5000 --name components components",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "tslint",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "concurrently": "^3.5.1",
    "dotenv": "^5.0.1",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "react-scripts-ts": "^2.16.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "typescript": "^3.0.1"
  }
}
