{
  "name": "@opencrvs/components",
  "version": "1.0.0-alpha.2.0",
  "description": "OpenCRVS UI Component library",
  "license": "MPL-2.0",
  "private": true,
  "dependencies": {
    "@types/rc-progress": "^2.4.3",
    "@types/react-select": "^2.0.2",
    "@types/react-stickynode": "^1.4.0",
    "@types/styled-components": "^5.1.3",
    "autoprefixer": "7.1.6",
    "babel-loader": "^7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-animation": "^2.0.4",
    "css-loader": "0.28.7",
    "dotenv-expand": "4.2.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "0.11.2",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "^24.8.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "postinstall-postinstall": "^2.0.0",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "rc-menu": "^7.4.13",
    "rc-progress": "^2.5.2",
    "react": "^16.10.1",
    "react-dev-utils": "^5.0.1",
    "react-docgen-typescript": "^1.7.0",
    "react-dom": "^16.10.1",
    "react-intl": "^3.1.13",
    "react-pdf": "^4.0.2",
    "react-select": "^2.0.0",
    "react-stickynode": "^2.1.1",
    "react-styleguidist": "^7.0.13",
    "react-tooltip": "^3.11.2",
    "recharts": "^1.4.0",
    "resolve": "1.6.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.19.0",
    "styled-components": "^5.1.1",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "22.0.1",
    "ts-loader": "^2.3.7",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.2.0",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "3.1.11",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf lib",
    "start": "concurrently 'styleguidist server' 'tsc -w'",
    "postinstall": "yarn build",
    "build": "yarn clean && tsc",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'",
    "build:clean": "rm -rf lib"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "tslint",
      "stylelint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.126",
    "@types/node": "^10.12.5",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "@types/react-stickynode": "^1.4.0",
    "@types/react-tooltip": "^3.11.0",
    "@types/recharts": "^1.1.1",
    "concurrently": "^3.5.1",
    "dotenv": "^6.1.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "typescript": "^3.7.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
