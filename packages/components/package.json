{
  "name": "@opencrvs/components",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.3.2",
    "react-docgen-typescript": "^1.5.0",
    "react-dom": "^16.3.2",
    "react-styleguidist": "^7.0.13",
    "styled-components": "^3.3.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "postinstall": "yarn build",
    "clean": "rm -rf lib",
    "start": "concurrently 'styleguidist server' 'tsc -w' 'opener http://localhost:6060/'",
    "build": "yarn clean && tsc",
    "docker-build": "docker build -t components .",
    "docker-run": "docker run -it --rm -p 5000:5000 --name components components"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "tslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "concurrently": "^3.5.1",
    "dotenv": "^5.0.1",
    "lint-staged": "^7.1.0",
    "opener": "^1.4.3",
    "prettier": "^1.12.1",
    "react-scripts-ts": "^2.16.0",
    "typescript": "^2.8.3"
  }
}
