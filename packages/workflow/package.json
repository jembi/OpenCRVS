{
  "name": "@opencrvs/workflow",
  "version": "1.0.0-alpha.1.1",
  "description": "OpenCRVS workflow service",
  "license": "NONE",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "postbuild": "ef-tspm",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@opencrvs/commons": "^1.0.0-alpha.1.1",
    "app-module-path": "^2.2.0",
    "boom": "^7.2.0",
    "country-data": "^0.0.31",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.5.1",
    "hapi-auth-jwt2": "8.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "node-fetch": "^2.6.0",
    "node-verhoeff": "^0.0.11",
    "short-uid": "^0.1.0",
    "uuid": "^3.3.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/jest": "^24.0.13",
    "@types/boom": "^7.2.0",
    "@types/fhir": "^0.0.30",
    "@types/hapi": "^17.0.12",
    "@types/hapi-auth-jwt2": "8.0.1",
    "@types/joi": "^14.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/node-fetch": "^2.3.4",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.3.9",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "nodemon": "^1.17.5",
    "lint-staged": "^7.1.0",
    "prettier": "^1.13.5",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.0.1"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@workflow/(.*)": "<rootDir>/src/$1"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
